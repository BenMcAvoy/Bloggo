package pages

templ Home() {
	@Page("RustBytes") {
		<h1>Hello, world!</h1>
	}
}

templ Page(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<title>{ title }</title>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<meta name="robots" content="index, follow"/>
			<meta name="language" content="English"/>
			<link rel="stylesheet" href="/static/styles.css"/>
		</head>
		<body>
			{ children... }
		</body>
	</html>
}
